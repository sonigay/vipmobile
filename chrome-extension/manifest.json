{
  "manifest_version": 3,
  "name": "VIP 대리점 정보 보호",
  "description": "U+ 온라인 가입 페이지에서 대리점 정보를 자동으로 숨겨주는 확장 프로그램",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://onsalemobile.uplus.co.kr/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://onsalemobile.uplus.co.kr/*",
        "https://vipmobile.netlify.app/*",
        "http://localhost:3000/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

