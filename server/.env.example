# VIP Plus Server - 환경 변수 예시
# 이 파일을 복사하여 .env 파일을 생성하고 실제 값으로 채워주세요.

# ============================================================================
# 서버 설정
# ============================================================================

# 서버 포트 (기본값: 4000)
PORT=4000

# 실행 환경 (development, production)
NODE_ENV=development

# ============================================================================
# Google Sheets API 설정 (필수)
# ============================================================================

# Google Service Account 이메일
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com

# Google Service Account Private Key
# 주의: 줄바꿈은 \n으로 이스케이프해야 합니다
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Google Spreadsheet ID
SHEET_ID=your-spreadsheet-id-here

# ============================================================================
# Discord 봇 설정 (선택적)
# ============================================================================

# Discord 봇 토큰
DISCORD_BOT_TOKEN=your-discord-bot-token-here

# Discord 채널 ID (로그 전송용)
DISCORD_CHANNEL_ID=your-channel-id-here

# Discord 로깅 활성화 (true/false)
DISCORD_LOGGING_ENABLED=true

# ============================================================================
# Kakao Maps API 설정 (선택적)
# ============================================================================

# Kakao REST API 키 (좌표 변환용)
KAKAO_API_KEY=your-kakao-api-key-here

# ============================================================================
# CORS 설정 (선택적)
# ============================================================================

# 허용할 Origin 목록 (쉼표로 구분)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# CORS Credentials 허용 여부 (true/false)
CORS_CREDENTIALS=true

# ============================================================================
# Web Push 알림 설정 (선택적)
# ============================================================================

# VAPID Public Key
VAPID_PUBLIC_KEY=your-vapid-public-key-here

# VAPID Private Key
VAPID_PRIVATE_KEY=your-vapid-private-key-here

# ============================================================================
# 기타 설정
# ============================================================================

# 로깅 레벨 (debug, info, warn, error)
LOG_LEVEL=info

# 캐시 TTL (밀리초, 기본값: 300000 = 5분)
CACHE_TTL=300000

# Rate Limit 간격 (밀리초, 기본값: 500)
RATE_LIMIT_COOLDOWN=500

# Rate Limit 최대 재시도 횟수 (기본값: 5)
RATE_LIMIT_MAX_RETRIES=5
